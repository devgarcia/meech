<p id="notice"><%= notice %></p>

<h1 class="searchTitle">
  <% if params[:query].present?  %>
    <%= "Results"  %>    <%#params[:query].pluralize.capitalize %>
  <% else %>   
    <%= "All Components" %>   
  <% end %>
</h1>

<br>
<br>

<%= link_to 'New Component', new_component_path, class: "newComponent" %>
<%= link_to 'Back to Search', initial_path, class: "backSearch" %>

<br>
<br>
<div class="table-responsive">
<div class="row card indextable">
  <div class="container-fluid">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Category</th>
          <th >Name</th>
          <th>Value</th>
          <th>Size</th>
          <th>Termination / Mounting style</th>
          <th>Quantity</th>
          <th>Supplier</th>
          <th>Order code</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @components.each do |component| %>
          <tr>
            <td><%= component.category %></td>
            <td><%= component.name %></td>
            <td><%= component.value %></td>
            <td><%= component.size %></td>
            <td><%= component.termination_mounting_style %></td>
            <td><%= component.quantity %></td>
            <td><%= component.supplier %></td>
            <td><%= component.order_code %></td>
            <td><%= link_to 'Show', component %></td>
            <td><%= link_to 'Edit', edit_component_path(component) %></td>
            <td><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>

<br>

<div class="foot"> 
<%= link_to 'New Component', new_component_path, class: "newComponent"  %>
<%= link_to 'Back to Search', initial_path, class: "backSearch" %>
</div>
